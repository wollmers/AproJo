% layout 'default';
% title 'Administration: Users';
% content_for banner => 'Administration: Users';
% my $users = schema->resultset('User')->search(undef, {order_by => { -asc => 'userID' }});
%= tag table => class => "table table-striped table-bordered table-condensed" => begin
  %= tag tr => begin
    %= tag th =>  l 'user_id' 
    %= tag th =>  l 'username' 
    %= tag th =>  l 'alias' 
    %= tag th =>  l 'action' 
  %= end
  % while (my $user = $users->next) {
    % my $name = $user->name;
    %= tag tr => begin
      %= tag td => $user->user_id
      %= tag td => $name
      %= tag td => $user->alias
      %= tag td => begin
        %= tag a => href => "/admin/user/$name" =>  l 'edit' 
      %= end
    %= end
  % }
%= end
