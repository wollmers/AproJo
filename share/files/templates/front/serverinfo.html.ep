% layout 'default';
% title 'Serverinfo';

<div class="container">                                 
<div class="row">
<div class="span12">

<h1>Serverinfo</h1> 

<h2>%ENV</h2>

%= tag table => class => "table table-striped table-bordered table-condensed" => begin
  %= tag tr => begin
    % for my $header (qw(key value)) {
      %= tag th =>  l $header 
    % } 
  %= end
  % for my $key (sort keys %ENV) {
      %= tag tr => begin
        %= tag td =>  $key
        %= tag td =>  $ENV{$key} // 'UNDEF'
      %= end
  % }
%= end


<h2>Perl @INC</h2>

%= tag table => class => "table table-striped table-bordered table-condensed" => begin
  %= tag tr => begin
    % for my $header (qw(path)) {
      %= tag th =>  l $header 
    % } 
  %= end
  % for my $path (@INC) {
      %= tag tr => begin
        %= tag td =>  $path 
      %= end
  % }
%= end

<h2>Schema sources and classes</h2>

% my @sources = schema->sources;
%= tag table => class => "table table-striped table-bordered table-condensed" => begin
  %= tag tr => begin
    % for my $header (qw(source table)) {
      %= tag th =>  l $header 
    % } 
  %= end
  % for my $source (sort @sources) {
    % my $table = schema->class($source)->table;
      %= tag tr => begin
        %= tag td =>  $source
        %= tag td =>  $table 
      %= end
  % }
%= end

<h2>Perl %INC</h2>

%= tag table => class => "table table-striped table-bordered table-condensed" => begin
  %= tag tr => begin
    % for my $header (qw(file version path)) {
      %= tag th =>  l $header 
    % } 
  %= end
  % for my $key (sort keys %INC) {
      % my $module = $key;
      % $module =~ s{\/}{::}gsmx;
      % $module =~ s/.pm$//g;
      % my $version; 
      % { no strict 'refs';
        % $version = ${$module . "::VERSION"} || '';
      % }
      %= tag tr => begin
        %= tag td =>  $key
        %= tag td =>  $version
        %= tag td =>  $INC{$key}
      %= end
  % }
%= end

<p>Number of modules: <%= scalar keys %INC %></p>

% my %h = (foo => undef);
%= tag p =>  $h{foo}

<br />
<br />
<br />
<br />
<br />
<br />
<br />
<br />
<br />


</div>
</div>
</div>